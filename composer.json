{
    "name": "cultuurnet/broadway-amqp",
    "description": "AMQP integration for Broadway library",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "publiq vzw",
            "email": "info@publiq.be"
        }
    ],
    "require": {
        "2dotstwice/collection": "~1.1",
        "broadway/broadway": "~0.10",
        "cultuurnet/deserializer": "~0.1",
        "cultuurnet/valueobjects": "~3.0",
        "php-amqplib/php-amqplib": "2.6.*",
        "psr/log": "~1.0"
    },
    "require-dev": {
        "phing/phing": "~2.11",
        "php-coveralls/php-coveralls": "^2.1",
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "2.6.1"
    },
    "autoload": {
        "psr-4": {
            "CultuurNet\\BroadwayAMQP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CultuurNet\\BroadwayAMQP\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "phing": "./vendor/bin/phing test"
    }
}
